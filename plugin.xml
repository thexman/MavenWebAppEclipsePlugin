<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="com.a9ski.maven.webapp.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="com.a9ski.maven.webapp.commands.category"
            id="com.a9ski.maven.webapp.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.a9ski.maven.webapp.commands.sampleCommand"
            class="com.a9ski.maven.webapp.handlers.NewProjectHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.a9ski.maven.webapp.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="com.a9ski.maven.webapp.menus.sampleMenu">
            <command
                  commandId="com.a9ski.maven.webapp.commands.sampleCommand"
                  mnemonic="S"
                  id="com.a9ski.maven.webapp.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.a9ski.maven.webapp.toolbars.sampleToolbar">
            <command
                  commandId="com.a9ski.maven.webapp.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="com.a9ski.maven.webapp.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.wst.web.ui"
            class="com.a9ski.maven.webapp.wizards.NewProjectWizard"
            finalPerspective="org.eclipse.jst.j2ee.J2EEPerspective"
            hasPages="true"
            icon="icons/WizardIcon.gif"
            id="com.a9ski.maven.webapp.newProjectWizard"
            name="New Maven Web Application"
            project="true">
         <description>
            Creates new Dynamic Web Application buildable with Maven
         </description>         
      </wizard>
      <primaryWizard
            id="com.a9ski.maven.webapp.newProjectWizard">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.a9ski.maven.webapp.preferences.MavenWebAppPreferencePage"
            id="com.a9ski.maven.webapp.preferences.MavenWebAppPreferencePage"
            name="Maven Web App Wizard">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.a9ski.maven.webapp.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="com.a9ski.maven.webapp.newProjectWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
